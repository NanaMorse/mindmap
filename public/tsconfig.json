{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "watch": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "types": ["node"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "../node_modules"
  ]
}